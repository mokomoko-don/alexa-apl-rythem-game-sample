                            "data": "${BitData.sources}",
                            "alignItems": "center",
                            "justifyContent": "center",
                            "items": [
                                {
                                    "type": "Pager",
                                    "id": "bit_${data.id}",
                                    "bind": [
                                        {
                                            "name": "DEGREE",
                                            "value": "${Math.clamp(0,Ts+2-Math.floor(String.slice(data.D,Math.floor((Ts-data.DL+2)/8)*8,Math.floor((Ts-data.DL+2)/8)*8+8))/1000,4)*(90)}"
                                        }
                                    ],
                                    "width": "20vh",
                                    "height": "10vh",
                                    "navigation": "none",
                                    "initialPage": 0,
                                    "data": [
                                        "0",
                                        "1"
                                    ],
                                    "onPageChanged": [
                                        {
                                            "type": "HitCheck",
                                            "bitId": "bit_${data.id}",
                                            "bitDeg": "${DEGREE}",
                                            "page": "${event.source.value}"
                                        }
                                    ],
                                    "items": [
                                        {
                                            "type": "Frame",
                                            "width": "10vh",
                                            "height": "10vh",
                                            "backgroundColor": "${data == \"0\" ? \"#9966CC\" : \"#6666AA\"}",
                                            "borderRadius": "10vh"
                                        }
                                    ],
                                    "position": "absolute",
                                    "transform": [
                                        {
                                            "rotate": "${DEGREE}"
                                        },
                                        {
                                            "translateX": "40vh"
                                        },
                                        {
                                            "rotate": "${-DEGREE}"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "Container",
                            "width": "100vw",
                            "height": "100vh",
                            "item": [
                                {
                                    "type": "Text",
                                    "width": "100vw",
                                    "height": "10vh",
                                    "text": "lapsed time of skill(T) : ${T}",
                                    "textAlignVertical": "center",
                                    "textAlign": "left"
                                },
                                {
                                    "type": "Text",
                                    "id": "debug_Td",
                                    "width": "100vw",
                                    "height": "10vh",
                                    "text": "music delay(Td) : ${Td}",
                                    "textAlignVertical": "center",
                                    "textAlign": "left"
                                },
                                {
                                    "type": "Text",
                                    "id": "debug_Ts",
                                    "width": "100vw",
                                    "height": "10vh",
                                    "text": "lapsed time of music(Ts) : ${Ts}",
                                    "textAlignVertical": "center",
                                    "textAlign": "left"
                                },
                                {
                                    "type": "Text",
                                    "width": "100vw",
                                    "height": "10vh",
                                    "text": "Score : ${SCORE}",
                                    "textAlignVertical": "center",
                                    "textAlign": "left"
                                },
                                {
                                    "type": "Text",
                                    "width": "100vw",
                                    "height": "10vh",
                                    "text": "Hit : ${INFO}",
                                    "textAlignVertical": "center",
                                    "textAlign": "left"
                                }
                            ],
                            "position": "absolute"
                        },
                        {
                            "type": "Video",
                            "id": "bgm",
                            "width": "0",
                            "height": "0",
                            "audioTrack": "background",
                            "autoplay": false,
                            "source": "music.mp4",
                            "onMount": [
                                {
                                    "type": "Idle",
                                    "description": "wait until music is ready",
                                    "delay": 3000
                                },
                                {
                                    "type": "Parallel",
                                    "commands": [
                                        {
                                            "type": "ControlMedia",
                                            "componentId": "bgm",
                                            "command": "play"
                                        },
                                        {
                                            "type": "SetValue",
                                            "componentId": "bg",
                                            "property": "opacity",
                                            "value": 1
                                        },
                                        {
                                            "type": "SetValue",
                                            "description": "adjust hit timing",
                                            "property": "Td",
                                            "value": "${T+0.25}"
                                        }
                                    ]
                                },
                                {
                                    "type": "SetValue",
                                    "componentId": "debug_Td",
                                    "property": "text",
                                    "value": "music delay(Td) : ${Td}"
                                }
                            ]
                        }
                    ]
                }
