        "type": "APL",
        "version": "1.3",
        "settings": {},
        "theme": "light",
        "import": [],
        "resources": [],
        "styles": {},
        "onMount": [],
        "graphics": {},
        "commands": {
            "BitRefresh": {
                "parameters": [
                    {
                        "name": "bitId",
                        "default": 0
                    }
                ],
                "commands": [
                    {
                        "type": "SetValue",
                        "componentId": "${bitId}",
                        "property": "opacity",
                        "value": "1"
                    }
                ]
            },
            "HitCheck": {
                "parameters": [
                    {
                        "name": "page",
                        "default": 0
                    },
                    {
                        "name": "bitId",
                        "default": 0
                    },
                    {
                        "name": "bitDeg",
                        "default": 0
                    }
                ],
                "commands": [
                    {
                        "when": "${true}",
                        "type": "Sequential",
                        "commands": [
                            {
                                "type": "Select",
                                "commands": [
                                    {
                                        "when": "${bitDeg >= 170 && bitDeg <= 190}",
                                        "type": "Sequential",
                                        "commands": [
                                            {
                                                "type": "SetValue",
                                                "property": "SCORE",
                                                "value": "${Math.floor(SCORE)+10}"
                                            },
                                            {
                                                "type": "SetValue",
                                                "property": "INFO",
                                                "value": "${bitId}"
                                            },
                                            {
                                                "type": "SetValue",
                                                "componentId": "${bitId}",
                                                "property": "opacity",
                                                "value": 0
                                            }
                                        ]
                                    },
                                    {
                                        "when": "${bitDeg == 0 || bitDeg == 360}",
                                        "type": "Sequential",
                                        "commands": [
                                            {
                                                "type": "SetValue",
                                                "componentId": "${bitId}",
                                                "property": "opacity",
                                                "value": 1
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        },
